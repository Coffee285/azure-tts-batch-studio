<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AzureTtsBatchStudio.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="AzureTtsBatchStudio.Views.StoryBuilderView"
             x:DataType="vm:StoryBuilderViewModel">

    <Design.DataContext>
        <vm:StoryBuilderViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="350" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Pane - Project Explorer -->
        <Border Grid.Column="0" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource CardCornerRadius}" 
                Padding="{StaticResource LargeMargin}"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Project Explorer Header -->
                <TextBlock Grid.Row="0" Text="Project Explorer" 
                           FontFamily="{StaticResource PrimaryFont}"
                           FontSize="{StaticResource FontSizeXLarge}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16"/>
                
                <!-- Project Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                    <Button Content="New" Command="{Binding NewProjectCommand}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            Foreground="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ButtonCornerRadius}"
                            Padding="8,4"
                            FontSize="{StaticResource FontSizeSmall}"/>
                    <Button Content="Open" Command="{Binding OpenProjectCommand}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            Foreground="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ButtonCornerRadius}"
                            Padding="8,4"
                            FontSize="{StaticResource FontSizeSmall}"/>
                    <Button Content="Refresh" Command="{Binding RefreshProjectsCommand}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            Foreground="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ButtonCornerRadius}"
                            Padding="8,4"
                            FontSize="{StaticResource FontSizeSmall}"/>
                </StackPanel>
                
                <!-- Project and Parts List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="8">
                        <!-- Projects Section -->
                        <StackPanel>
                            <TextBlock Text="Projects" 
                                       FontWeight="SemiBold" 
                                       FontSize="{StaticResource FontSizeMedium}"
                                       Margin="0,0,0,6"/>
                            <ComboBox ItemsSource="{Binding AvailableProjects}"
                                      SelectedItem="{Binding SelectedProject}"
                                      HorizontalAlignment="Stretch"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      PlaceholderText="Select project..."/>
                        </StackPanel>
                        
                        <!-- Story Parts Section -->
                        <StackPanel IsVisible="{Binding CurrentProject, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="Story Parts" 
                                       FontWeight="SemiBold" 
                                       FontSize="{StaticResource FontSizeMedium}"
                                       Margin="0,16,0,6"/>
                            <ListBox ItemsSource="{Binding StoryParts}"
                                     SelectedItem="{Binding SelectedStoryPart}"
                                     MaxHeight="300"
                                     Background="Transparent"
                                     BorderBrush="{DynamicResource TextControlElevationBorderBrush}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="4">
                                            <TextBlock Text="{Binding FileName}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="{StaticResource FontSizeSmall}"/>
                                            <TextBlock Text="{Binding WordCount, StringFormat='{}{0} words'}" 
                                                       FontSize="{StaticResource FontSizeSmall}"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Status Info -->
                <Border Grid.Row="3" 
                        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,8,0,0">
                    <StackPanel Spacing="4">
                        <TextBlock Text="{Binding CurrentProject.Name, StringFormat='Project: {0}'}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   FontWeight="SemiBold"
                                   IsVisible="{Binding CurrentProject, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                        <TextBlock Text="{Binding ProgressMessage}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   IsVisible="{Binding CurrentProject, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                        <ProgressBar Value="{Binding CompletionPercentage}"
                                     Height="4"
                                     CornerRadius="2"
                                     Margin="0,4,0,0"
                                     IsVisible="{Binding TargetWordCount, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                        <TextBlock Text="{Binding NextDirectiveText}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   Opacity="0.7"
                                   FontStyle="Italic"
                                   IsVisible="{Binding NextDirectiveText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        
        <!-- Center Pane - Story Console -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Story Console Header with Help -->
            <Border Grid.Row="0" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Margin="0,0,0,8"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Story Console" 
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="{StaticResource FontSizeXLarge}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="ðŸ“– Quick Start" 
                                Click="ShowQuickStart_Click"
                                Background="Transparent"
                                BorderBrush="{StaticResource AccentBrush}"
                                Foreground="{StaticResource AccentBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="8,4"
                                FontSize="{StaticResource FontSizeSmall}"
                                ToolTip.Tip="Show quick start guide and story templates"/>
                        <Button Content="âš™ï¸ API Setup" 
                                Click="OpenSettings_Click"
                                Background="Transparent"
                                BorderBrush="{StaticResource SuccessBrush}"
                                Foreground="{StaticResource SuccessBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="8,4"
                                FontSize="{StaticResource FontSizeSmall}"
                                ToolTip.Tip="Configure OpenAI API key in Settings"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Quick Start / Help Panel (Collapsible) -->
            <Border Grid.Row="1" 
                    x:Name="HelpPanel"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Margin="0,0,0,8"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    IsVisible="False">
                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="ðŸš€ Quick Start Guide" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeLarge}"
                                       FontWeight="Bold"/>
                            <Button Grid.Column="1" 
                                    Content="âœ•" 
                                    Click="HideQuickStart_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    FontSize="{StaticResource FontSizeLarge}"/>
                        </Grid>
                        
                        <!-- Prerequisites -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="1ï¸âƒ£ First Time Setup" FontWeight="Bold" FontSize="{StaticResource FontSizeMedium}"/>
                            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                                    CornerRadius="4" Padding="8">
                                <StackPanel Spacing="4">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="âš ï¸ Important: " FontWeight="Bold" Foreground="{StaticResource ErrorBrush}"/>
                                        <Run Text="You need an OpenAI API key to use Story Builder."/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="1. Click"/>
                                        <Run Text="âš™ï¸ API Setup" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                                        <Run Text="button above"/>
                                    </TextBlock>
                                    <TextBlock Text="2. Scroll to 'Story Builder Configuration'" TextWrapping="Wrap"/>
                                    <TextBlock Text="3. Enter your OpenAI API key (starts with sk-...)" TextWrapping="Wrap"/>
                                    <TextBlock Text="4. Click Save" TextWrapping="Wrap"/>
                                    <TextBlock TextWrapping="Wrap" Opacity="0.8" FontSize="{StaticResource FontSizeSmall}">
                                        <Run Text="Don't have a key? Visit: "/>
                                        <Run Text="platform.openai.com/api-keys" FontStyle="Italic"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Story Templates -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="2ï¸âƒ£ Choose Your Genre" FontWeight="Bold" FontSize="{StaticResource FontSizeMedium}"/>
                            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                                    CornerRadius="4" Padding="8">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="ðŸ“ Templates available in StoryTemplates/ folder:" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="ðŸ‘» Horror - Psychological, supernatural, atmospheric" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="ðŸŒ Deep Web - Cyber-horror, tech mysteries, digital nightmares" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="ðŸ‘½ Alien - Sci-fi horror, cosmic dread, first contact" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="â° Anachronism - Time loops, historical horror, temporal horror" FontSize="{StaticResource FontSizeSmall}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Example Prompts -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="3ï¸âƒ£ Example Story Prompt" FontWeight="Bold" FontSize="{StaticResource FontSizeMedium}"/>
                            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                                    CornerRadius="4" Padding="8">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Horror (Office at Night):" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="{StaticResource FontSizeSmall}" Opacity="0.9">
                                        Write the opening scene of a horror story about a woman working alone in a high-rise office building at 3 AM. She hears footsteps approaching her cubicle, but when the lights go out, she realizes she's not alone. Include sound effect markers like [SFX:footsteps_echo] and build tension slowly. End on a cliffhanger. 800 words.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Quick Tips -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="ðŸ’¡ Quick Tips" FontWeight="Bold" FontSize="{StaticResource FontSizeMedium}"/>
                            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                                    CornerRadius="4" Padding="8">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="â€¢ Include [SFX:sound_name] markers for audio effects" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="â€¢ 15 min = ~2,250 words (150 WPM)" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="â€¢ Use Temperature 0.8 for balanced creativity" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="â€¢ Build tension slowly - don't rush to scares" FontSize="{StaticResource FontSizeSmall}"/>
                                    <TextBlock Text="â€¢ GPT-4 = best quality, GPT-3.5-turbo = faster/cheaper" FontSize="{StaticResource FontSizeSmall}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Full Docs Link -->
                        <TextBlock TextWrapping="Wrap" FontSize="{StaticResource FontSizeSmall}" Opacity="0.8">
                            <Run Text="ðŸ“š For detailed guides, see:"/>
                            <Run Text="STORY_BUILDER_QUICK_START.md" FontWeight="Bold"/>
                            <Run Text="and templates in"/>
                            <Run Text="StoryTemplates/" FontWeight="Bold"/>
                            <Run Text="folder"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Output Display -->
            <Border Grid.Row="2" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Margin="0,0,0,8"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Quick Actions Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="4" Margin="0,0,0,8"
                                IsVisible="{Binding OutputText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <TextBlock Text="Quick Actions:" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        
                        <ItemsControl ItemsSource="{Binding QuickActions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Label}" 
                                            Command="{Binding $parent[UserControl].DataContext.ApplyQuickActionCommand}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderBrush="{StaticResource AccentBrush}"
                                            Foreground="{StaticResource AccentBrush}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="6,3"
                                            FontSize="{StaticResource FontSizeSmall}"
                                            ToolTip.Tip="{Binding Description}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Output Text Area -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding OutputText}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 MinHeight="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="{StaticResource FontSizeMedium}"
                                 IsReadOnly="True"
                                 Watermark="Generated story content will appear here..."/>
                    </ScrollViewer>
                    
                    <!-- Generation Status -->
                    <Grid Grid.Row="2" Margin="0,8,0,0"
                          IsVisible="{Binding IsGenerating}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Generating..." FontSize="{StaticResource FontSizeSmall}" VerticalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" Width="100" Height="4" CornerRadius="2"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Text="{Binding ElapsedTime, StringFormat='Elapsed: {0:mm\\:ss}'}" 
                                   FontSize="{StaticResource FontSizeSmall}" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Prompt Input -->
            <Border Grid.Row="3" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Margin="0,0,0,8"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0" Text="{Binding PromptInput}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             MinHeight="80"
                             BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                             CornerRadius="4"
                             Padding="8"
                             FontSize="{StaticResource FontSizeMedium}"
                             Watermark="Enter your story prompt here..."/>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" Spacing="8">
                        <Button Content="Send" Command="{Binding SendCommand}" 
                                IsEnabled="{Binding !IsGenerating}"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White"
                                BorderBrush="{StaticResource SuccessBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="16,8"
                                FontWeight="SemiBold"/>
                        <Button Content="Continue" Command="{Binding ContinueCommand}" 
                                IsEnabled="{Binding !IsGenerating}"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                BorderBrush="{StaticResource AccentBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="16,8"
                                FontWeight="SemiBold"/>
                        <Button Content="Cancel" Command="{Binding CancelCommand}" 
                                IsEnabled="{Binding IsGenerating}"
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                BorderBrush="{StaticResource ErrorBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="16,8"
                                FontWeight="SemiBold"/>
                        <Button Content="Save As Part" Command="{Binding SaveAsPartCommand}" 
                                IsEnabled="{Binding OutputText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="Transparent"
                                BorderBrush="{StaticResource AccentBrush}"
                                Foreground="{StaticResource AccentBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="16,8"
                                FontWeight="SemiBold"/>
                        <Button Content="Copy" Command="{Binding CopyToClipboardCommand}" 
                                IsEnabled="{Binding OutputText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="Transparent"
                                BorderBrush="{StaticResource AccentBrush}"
                                Foreground="{StaticResource AccentBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ButtonCornerRadius}"
                                Padding="16,8"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Status Bar -->
            <Border Grid.Row="4" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeSmall}"
                                   VerticalAlignment="Center"/>
                        <ProgressBar Value="{Binding ProgressValue}" 
                                     Maximum="100" 
                                     Width="150" 
                                     Height="4" 
                                     CornerRadius="2"
                                     Margin="12,0,0,0"
                                     IsVisible="{Binding IsGenerating}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding ElapsedTime, StringFormat='Elapsed: {0:mm\\:ss}'}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding IsGenerating}"/>
                        <TextBlock Text="{Binding TokenBudgetInfo}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   VerticalAlignment="Center"
                                   Opacity="0.7"/>
                        <TextBlock Text="{Binding TokenBudgetWarning}" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontWeight="SemiBold"
                                   IsVisible="{Binding TokenBudgetWarning, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="3" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        
        <!-- Right Pane - Instructions &amp; Model -->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="55*" MinHeight="200"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="45*" MinHeight="150"/>
            </Grid.RowDefinitions>
            
            <!-- Instructions Editor -->
            <Border Grid.Row="0" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Instructions" 
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="{StaticResource FontSizeXLarge}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding Instructions}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 MinHeight="120"
                                 BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                 CornerRadius="4"
                                 Padding="8"
                                 FontSize="{StaticResource FontSizeMedium}"
                                 Watermark="Enter writing instructions and style guidance..."/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" HorizontalAlignment="Stretch"/>
            
            <!-- Model &amp; Parameters -->
            <Border Grid.Row="2" 
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="{StaticResource CardCornerRadius}" 
                    Padding="{StaticResource LargeMargin}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Model &amp; Parameters" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   FontWeight="SemiBold"/>
                        
                        <!-- Model -->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Model" FontWeight="SemiBold" FontSize="{StaticResource FontSizeMedium}"/>
                                <Button Grid.Column="1" Content="Manage..." Command="{Binding ManageModelsCommand}" 
                                        Background="Transparent"
                                        BorderBrush="{StaticResource AccentBrush}"
                                        Foreground="{StaticResource AccentBrush}"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        Padding="6,2"
                                        FontSize="{StaticResource FontSizeSmall}"/>
                            </Grid>
                            
                            <!-- Model Preset Dropdown -->
                            <ComboBox ItemsSource="{Binding ModelPresets}" 
                                      SelectedItem="{Binding SelectedModelPreset}"
                                      IsVisible="{Binding !IsCustomModel}"
                                      HorizontalAlignment="Stretch"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      Margin="0,4,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Label}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Id}" FontSize="{StaticResource FontSizeSmall}" Opacity="0.7"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <!-- Custom Model Input -->
                            <TextBox Text="{Binding CustomModel}" 
                                     IsVisible="{Binding IsCustomModel}"
                                     BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                     CornerRadius="4"
                                     Padding="8,6"
                                     Margin="0,4,0,0"
                                     Watermark="Enter custom model name..."/>
                            
                            <!-- Custom Model Toggle -->
                            <CheckBox IsChecked="{Binding IsCustomModel}" 
                                      Content="Use custom model" 
                                      FontSize="{StaticResource FontSizeSmall}"
                                      Margin="0,4,0,0"/>
                            
                            <!-- Model Help Text -->
                            <TextBlock Text="{Binding ModelHelp}" 
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Opacity="0.7"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <!-- Adjustable Parameters Section with GridSplitter -->
                        <TextBlock Text="Adjustable Parameters" 
                                   FontWeight="SemiBold" 
                                   FontSize="{StaticResource FontSizeMedium}"
                                   Margin="0,16,0,8"/>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto"
                                      MaxHeight="300">
                            <Grid Margin="4"
                                  ColumnDefinitions="2*,Auto,3*"
                                  RowDefinitions="Auto,Auto,Auto"
                                  MaxWidth="340">
                                <!-- Left: labels + numeric boxes -->
                                <StackPanel Grid.Column="0" Spacing="16" Margin="0,0,8,0">
                                    <StackPanel>
                                        <TextBlock Text="Temperature" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}"/>
                                        <NumericUpDown Minimum="0" Maximum="2" Increment="0.01" FormatString="F2"
                                                       Value="{Binding Temperature, Mode=TwoWay}" 
                                                       MinWidth="80" MaxWidth="120"
                                                       BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                                       CornerRadius="3"
                                                       FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Top P" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}"/>
                                        <NumericUpDown Minimum="0" Maximum="1" Increment="0.01" FormatString="F2"
                                                       Value="{Binding TopP, Mode=TwoWay}" 
                                                       MinWidth="80" MaxWidth="120"
                                                       BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                                       CornerRadius="3"
                                                       FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                    
                                    <StackPanel>
                                        <TextBlock Text="K Recent Parts" FontWeight="SemiBold" FontSize="{StaticResource FontSizeSmall}"/>
                                        <NumericUpDown Minimum="0" Maximum="20" Increment="1"
                                                       Value="{Binding KRecentParts, Mode=TwoWay}" 
                                                       MinWidth="80" MaxWidth="120"
                                                       BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                                       CornerRadius="3"
                                                       FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Splitter -->
                                <GridSplitter Grid.Column="1" Width="6" Background="{DynamicResource ThemeAccentBrush}"
                                              ResizeDirection="Columns" ShowsPreview="True" />

                                <!-- Right: sliders with tick marks -->
                                <StackPanel Grid.Column="2" Spacing="16">
                                    <StackPanel>
                                        <Slider Minimum="0" Maximum="2" TickFrequency="0.1" IsSnapToTickEnabled="False"
                                                TickPlacement="BottomRight"
                                                Value="{Binding Temperature, Mode=TwoWay}"/>
                                        <TextBlock Text="{Binding Temperature, StringFormat='Temperature: {0:F2}'}"
                                                   HorizontalAlignment="Right"
                                                   FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <Slider Minimum="0" Maximum="1" TickFrequency="0.1" IsSnapToTickEnabled="False"
                                                TickPlacement="BottomRight"
                                                Value="{Binding TopP, Mode=TwoWay}"/>
                                        <TextBlock Text="{Binding TopP, StringFormat='Top P: {0:F2}'}"
                                                   HorizontalAlignment="Right"
                                                   FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <Slider Minimum="0" Maximum="20" TickFrequency="1" IsSnapToTickEnabled="True"
                                                TickPlacement="BottomRight"
                                                Value="{Binding KRecentParts, Mode=TwoWay}"/>
                                        <TextBlock Text="{Binding KRecentParts, StringFormat='K Parts: {0}'}"
                                                   HorizontalAlignment="Right"
                                                   FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                        
                        <!-- Other Parameters (without sliders) -->
                        <StackPanel Spacing="12" Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Max Output Tokens" FontWeight="SemiBold" FontSize="{StaticResource FontSizeMedium}" Margin="0,0,0,4"/>
                                <NumericUpDown Value="{Binding MaxOutputTokens}" 
                                               Minimum="1" Maximum="8192" Increment="256"
                                               MinWidth="100" MaxWidth="200"
                                               BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                               CornerRadius="4"/>
                            </StackPanel>
                            
                            <!-- Context Budget -->
                            <StackPanel>
                                <TextBlock Text="Context Budget" FontWeight="SemiBold" FontSize="{StaticResource FontSizeMedium}" Margin="0,0,0,4"/>
                                <NumericUpDown Value="{Binding ContextBudgetTokens}" 
                                               Minimum="1000" Maximum="128000" Increment="1000"
                                               MinWidth="100" MaxWidth="200"
                                               BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                               CornerRadius="4"/>
                            </StackPanel>
                            
                            <!-- Streaming Toggle -->
                            <CheckBox IsChecked="{Binding Streaming}" Content="Streaming" FontWeight="SemiBold"/>
                            
                            <!-- Duration Goal -->
                            <StackPanel>
                                <TextBlock Text="Target Duration (minutes)" FontWeight="SemiBold" FontSize="{StaticResource FontSizeMedium}" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <NumericUpDown Grid.Column="0" Value="{Binding TargetMinutes}" 
                                                   Minimum="0" Maximum="1000" Increment="5"
                                                   BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                                   CornerRadius="4"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TargetWordCount, StringFormat='{} = {0} words'}" 
                                               VerticalAlignment="Center" Margin="8,0,0,0"
                                               FontSize="{StaticResource FontSizeSmall}" Opacity="0.7"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- WPM -->
                            <StackPanel>
                                <TextBlock Text="Words per Minute" FontWeight="SemiBold" FontSize="{StaticResource FontSizeMedium}" Margin="0,0,0,4"/>
                                <NumericUpDown Value="{Binding Wpm}" 
                                               Minimum="100" Maximum="300" Increment="10"
                                               MinWidth="100" MaxWidth="200"
                                               BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                               CornerRadius="4"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>

</UserControl>