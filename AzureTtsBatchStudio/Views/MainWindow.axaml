<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AzureTtsBatchStudio.ViewModels"
        xmlns:views="using:AzureTtsBatchStudio.Views"
        xmlns:preflight="using:AzureTtsBatchStudio.Preflight"
        xmlns:logging="using:AzureTtsBatchStudio.Logging"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="AzureTtsBatchStudio.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Azure TTS Batch Studio"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="700"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource PrimaryFont}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="{StaticResource LargeMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource CardCornerRadius}" 
                Padding="{StaticResource LargeMargin}" 
                Margin="0,0,0,16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Azure TTS Batch Studio" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeTitle}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Text-to-Speech conversion and AI-powered story creation" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeSmall}"
                                   Margin="0,4,0,0"
                                   Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Logs" Command="{Binding ToggleLogConsoleCommand}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            Foreground="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ButtonCornerRadius}"
                            Padding="12,6"
                            FontWeight="SemiBold"/>
                    <Button Content="Settings" Command="{Binding OpenSettingsCommand}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            Foreground="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ButtonCornerRadius}"
                            Padding="16,8"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Tab Control and Log Console -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Tab Control -->
            <TabControl Grid.Row="0">
                <!-- TTS Tab -->
                <TabItem Header="Text-to-Speech">
                    <views:TtsTabView DataContext="{Binding}"/>
                </TabItem>
                
                <!-- Preflight Tab -->
                <TabItem Header="Preflight">
                    <preflight:PreflightView/>
                </TabItem>
                
                <!-- Story Builder Tab -->
                <TabItem Header="Story Builder">
                    <views:StoryBuilderView/>
                </TabItem>
            </TabControl>
            
            <!-- Log Console -->
            <logging:LogConsoleView Grid.Row="1" 
                                    DataContext="{Binding LogConsoleViewModel}"
                                    IsVisible="{Binding $parent[Window].DataContext.IsLogConsoleOpen}"
                                    Height="240"
                                    Margin="0,8,0,0"/>
        </Grid>
    </Grid>

</Window>
