<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AzureTtsBatchStudio.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
        x:Class="AzureTtsBatchStudio.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="Settings - Azure TTS Batch Studio"
        Width="700"
        Height="600"
        MinWidth="650"
        MinHeight="550"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        FontFamily="{StaticResource PrimaryFont}">

    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="{StaticResource LargeMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource CardCornerRadius}" 
                Padding="{StaticResource LargeMargin}" 
                Margin="0,0,0,16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Settings" 
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="{StaticResource FontSizeTitle}"
                               FontWeight="Bold"/>
                    <TextBlock Text="Configure Azure TTS and application preferences" 
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="{StaticResource FontSizeSmall}"
                               Margin="0,4,0,0"
                               Opacity="0.7"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                
                <!-- Azure Configuration -->
                <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource CardCornerRadius}" 
                        Padding="{StaticResource LargeMargin}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel>
                        <TextBlock Text="Azure Speech Services Configuration" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="180,*,Auto" 
                              Margin="0,0,0,8">
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Subscription Key" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                     Text="{Binding SubscriptionKey}" 
                                     PasswordChar="*"
                                     CornerRadius="6"
                                     Watermark="Enter your Azure subscription key"
                                     Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Region" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding Region}" 
                                     CornerRadius="6"
                                     Watermark="e.g., eastus, westus2"
                                     Margin="0,0,12,12"/>
                            
                            <Button Grid.Row="2" Grid.Column="1" 
                                    Content="Test Connection" 
                                    Command="{Binding TestConnectionCommand}"
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ButtonCornerRadius}"
                                    Padding="16,8"
                                    FontWeight="SemiBold"
                                    FontSize="{StaticResource FontSizeMedium}"
                                    HorizontalAlignment="Left"
                                    Margin="0,8,0,12"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding ConnectionStatus}" 
                                       Foreground="{Binding ConnectionStatusColor}"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Margin="0,0,0,8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- UI Preferences -->
                <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource CardCornerRadius}" 
                        Padding="{StaticResource LargeMargin}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel>
                        <TextBlock Text="Appearance and Layout" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="180,*" 
                              Margin="0,0,0,8">
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Theme" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding ThemeOptions}"
                                      SelectedItem="{Binding SelectedTheme}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Font Size" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding FontSizeOptions}"
                                      SelectedItem="{Binding SelectedFontSize}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Font Family" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding FontFamilyOptions}"
                                      SelectedItem="{Binding SelectedFontFamily}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Layout Style" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,0"/>
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      ItemsSource="{Binding LayoutStyleOptions}"
                                      SelectedItem="{Binding SelectedLayoutStyle}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Default Settings -->
                <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource CardCornerRadius}" 
                        Padding="{StaticResource LargeMargin}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel>
                        <TextBlock Text="Default Settings" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="180,*,Auto" Margin="0,0,0,8">
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Output Directory" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding DefaultOutputDirectory}" 
                                     CornerRadius="6,0,0,6" BorderThickness="1,1,0,1"
                                     Margin="0,0,0,12"/>
                            <Button Grid.Row="0" Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowseOutputDirectoryCommand}"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    Foreground="{StaticResource AccentBrush}"
                                    BorderThickness="1"
                                    CornerRadius="0,6,6,0"
                                    Margin="0,0,0,12" Padding="12,8"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Language" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                      ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding DefaultLanguage}"
                                      DisplayMemberBinding="{Binding DisplayName}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Audio Format" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                      ItemsSource="{Binding AudioFormats}"
                                      SelectedItem="{Binding DefaultAudioFormat}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Quality" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                      ItemsSource="{Binding QualityOptions}"
                                      SelectedItem="{Binding DefaultQuality}"
                                      BorderBrush="{DynamicResource TextControlElevationBorderBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Padding="12,8"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      MinHeight="32"
                                      Margin="0,0,0,12"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Speaking Rate" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding DefaultSpeakingRate}" 
                                        Minimum="0.5" Maximum="2.0" TickFrequency="0.1"
                                        Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding DefaultSpeakingRate, StringFormat='{}{0:F1}x'}" 
                                           FontFamily="{StaticResource PrimaryFont}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           VerticalAlignment="Center" MinWidth="35"/>
                            </Grid>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                       Text="Pitch" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,0"/>
                            <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding DefaultPitch}" 
                                        Minimum="-50" Maximum="50" TickFrequency="5"
                                        Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding DefaultPitch, StringFormat='{}{0:F0}%'}" 
                                           FontFamily="{StaticResource PrimaryFont}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           VerticalAlignment="Center" MinWidth="35"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Advanced Settings -->
                <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource CardCornerRadius}" 
                        Padding="{StaticResource LargeMargin}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel>
                        <TextBlock Text="Advanced Settings" 
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="200,*" Margin="0,0,0,8">
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Max Concurrent Processing" 
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,12"/>
                            <NumericUpDown Grid.Row="0" Grid.Column="1" 
                                           Value="{Binding MaxConcurrentProcessing}" 
                                           Minimum="1" Maximum="10"
                                           Width="120" CornerRadius="6"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,0,12"/>
                            
                            <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                      Content="Remember last settings" 
                                      IsChecked="{Binding RememberLastSettings}"
                                      FontFamily="{StaticResource PrimaryFont}"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      Margin="0,0,0,12"/>
                            
                            <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                      Content="Show processing details" 
                                      IsChecked="{Binding ShowProcessingDetails}"
                                      FontFamily="{StaticResource PrimaryFont}"
                                      FontSize="{StaticResource FontSizeMedium}"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Dialog Buttons -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource CardCornerRadius}" 
                Padding="{StaticResource LargeMargin}" 
                Margin="0,16,0,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="12">
                <Button Content="Restore Defaults" 
                        Command="{Binding RestoreDefaultsCommand}"
                        Background="Transparent"
                        BorderBrush="{StaticResource AccentBrush}"
                        Foreground="{StaticResource AccentBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ButtonCornerRadius}"
                        Padding="16,8"
                        FontWeight="SemiBold"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderBrush="{StaticResource AccentBrush}"
                        Foreground="{StaticResource AccentBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ButtonCornerRadius}"
                        Padding="16,8"
                        FontWeight="SemiBold"/>
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Background="{StaticResource SuccessBrush}"
                        Foreground="White"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ButtonCornerRadius}"
                        Padding="16,8"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>