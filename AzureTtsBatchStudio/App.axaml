<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AzureTtsBatchStudio.App"
             xmlns:local="using:AzureTtsBatchStudio"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Custom Styles -->
        <Style Selector="Button.Compact">
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="MaxHeight" Value="32"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        </Style>
        
        <Style Selector="NumericUpDown">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MaxWidth" Value="160"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="MinHeight" Value="28"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="MinHeight" Value="28"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <!-- Modern Color Palette -->
        <Color x:Key="AccentColor">#0078D4</Color>
        <Color x:Key="SuccessColor">#107C10</Color>
        <Color x:Key="WarningColor">#FF8C00</Color>
        <Color x:Key="ErrorColor">#D13438</Color>
        
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

        <!-- Typography -->
        <FontFamily x:Key="PrimaryFont">Segoe UI, Inter, system-ui, sans-serif</FontFamily>
        
        <!-- Font Sizes -->
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <x:Double x:Key="FontSizeMedium">14</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
        <x:Double x:Key="FontSizeXLarge">20</x:Double>
        <x:Double x:Key="FontSizeTitle">28</x:Double>

        <!-- Spacing -->
        <Thickness x:Key="SmallMargin">4</Thickness>
        <Thickness x:Key="MediumMargin">8</Thickness>
        <Thickness x:Key="LargeMargin">16</Thickness>
        <Thickness x:Key="XLargeMargin">24</Thickness>

        <!-- Corner Radii -->
        <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
        <CornerRadius x:Key="ButtonCornerRadius">6</CornerRadius>
    </Application.Resources>
</Application>